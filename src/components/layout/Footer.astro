<style>
  footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100vh;
    text-align: center;
    background-color: white;
  }
  .footer-container {
    width: 100%;
    height: var(--height);
    padding: 5.5rem 0 2.5rem;
    margin: 1.25rem auto;
    border-radius: 1.5rem;
    background-color: var(--light-grey);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  .menu {
    display: flex;
    gap: 2.5rem;
    justify-content: center;
    font-size: 1.7rem;
    margin-bottom: 10%;
  }
  .address {
    text-transform: uppercase;
    line-height: 1.5;
  }
  .social {
    display: flex;
    gap: 2.5rem;
    justify-content: center;
    margin-top: 5%;
  }
  .icon {
    font-size: 1.5rem;
    width: 3.5rem;
    height: 3.5rem;
    padding-top: 0.9rem;
    fill: var(--dark-grey);
    border: 1px solid var(--dark-grey);
    border-radius: 50%;
    transition: all 0.2s ease-in-out;
  }
  .icon:hover {
    fill: var(--grey);
    border: 1px solid var(--grey);
  }
  .footer {
    padding: 0 2.5rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
  .footer a {
    margin-left: 1rem;
  }
  a {
    color: var(--dark-grey);
    transition: color 0.2s ease-in-out;
  }
  a:hover {
    color: var(--grey);
  }
</style>
