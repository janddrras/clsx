---
const { title, frontText, backText } = Astro.props
---

<div class="box">
  <div class="front">
    <h2>{title}</h2>
    <p>{frontText}</p>
    <div class="icon">+</div>
  </div>
  <div class="back">
    <p>{backText}</p>
    <div class="icon">-</div>
  </div>

  <style>
    .box {
      width: 100%;
      height: 100%;
      padding: 5px;
      position: relative;
      background: var(--gradient);
      border-radius: 1rem;
      overflow: hidden;
      aspect-ratio: 1/1;
    }
    .box h2 {
      font-size: 2.2rem;
      margin-bottom: 2rem;
    }
    .box p {
      font-size: 1.4rem;
      line-height: 1.4;
    }
    .icon {
      position: absolute;
      bottom: 1rem;
      right: 1rem;
      font-size: 2rem;
      color: white;
      background-color: var(--black);
      width: 2rem;
      height: 2rem;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
    }
    .front,
    .back {
      padding: 2rem;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      transition: transform 0.5s;
    }
    .back {
      background-color: var(--black);
      color: white;
      transform: translateY(100%);
    }
    .back p {
      font-size: 1.2rem;
    }
    .back .icon {
      background-color: white;
      color: var(--black);
    }

    .box:hover .back {
      transform: translateY(0);
    }
  </style>
</div>
