---
import Image1 from "../../images/Image09.webp"
import Image2 from "../../images/Image06.webp"
import Image3 from "../../images/Image10.webp"
import Image4 from "../../images/Image02.webp"
import { Image } from "astro:assets"
import Text from "../../content/grid-page/grid-text.json"
import TextBox from "./TextBox.astro"

const images = [Image1, Image2, Image3, Image4]

const GridContent = Object.keys(Text).map((key, i) => ({ ...Text[key], image: images[i] }))
---

<div class="grid">
  {
    GridContent.map((box) => {
      return (
        <>
          <TextBox title={box.title} frontText={box.frontText} backText={box.backText} />
          {box.image && (
            <div class="img">
              <Image src={box.image} alt="Image 1" />
            </div>
          )}
        </>
      )
    })
  }
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
  }
  .img {
    width: 100%;
    height: 100%;
    border-radius: 1rem;
    overflow: hidden;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
