---
const { label, title, bold } = Astro.props
---

<section class="header container">
  <div class="header-container">
    <p class="label">{label}</p>
    <h1>
      {title}
      <span class="bold">{bold}</span>
    </h1>
    <p class="description">This is a fake website ispired by the award winning site:</p>
    <a href="https://www.hqx21.com/" target="_blank" class="btn">HQX 21</a>
  </div>
  <div class="image">
    <slot />
  </div>
</section>

<style>
  .header {
    min-height: 20vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
    gap: 1.25rem;
    padding: 1.5rem;
  }
  .header-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    text-align: left;
    padding: 8rem 4rem;
    background-color: var(--yellow-shade);
    border-radius: 1rem;
    height: 100%;
  }
  .label {
    font-size: 1rem;
    font-weight: 700;
    padding-bottom: 0.5rem;
  }
  h1 {
    font-size: 3rem;
    font-weight: 400;
    padding-bottom: 5.5rem;
  }
  .bold {
    font-weight: 700;
  }
  .description {
    font-size: 1.3rem;
    font-weight: 400;
    line-height: 1.6;
  }
  .image {
    border-radius: 1rem;
    overflow: hidden;
    height: 100%;
  }
  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
